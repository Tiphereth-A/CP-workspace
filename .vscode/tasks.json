{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++: Generate execute file of current source file for debug",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "-D_LOCAL_",
                "-D_DEBUG",
                "-std=c++17",
                "-Wl,--stack=1073741824"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "C++: compile and run",
            "command": "run_cpp.bat",
            "args": [
                "${fileDirname}",
                "${fileBasenameNoExtension}",
                "${workspaceFolder}\\data"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\.vscode"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "C++: Generate assembler code of current source file",
            "command": "g++",
            "args": [
                "-S",
                "${file}",
            ],
            "problemMatcher": [],
            "detail": "g++ -S"
        },
        {
            "type": "shell",
            "label": "C++: Expand current source file",
            "command": "g++",
            "args": [
                "${file}",
                "-E",
                ">",
                "${fileDirname}\\out\\${fileBasenameNoExtension}_expand.txt",
            ],
            "problemMatcher": [],
            "detail": "g++ -E"
        }
    ],
    "version": "2.0.0"
}