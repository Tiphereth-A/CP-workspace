{
    "files.defaultLanguage": "cpp",
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "files.autoGuessEncoding": true,
    "files.trimTrailingWhitespace": true,
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    },
    "files.associations": {
        "*.cpp": "cpp",
        "*.py": "python",
        "*.out": "plaintext",
        "*.in": "plaintext",
        "*.hpp": "cpp",
        "**/include/c++/**": "cpp",
        "${workspaceFolder}/lib/**": "cpp"
    }
}